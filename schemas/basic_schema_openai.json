{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/scientific-paper.schema.json",
  "title": "Scientific Paper",
  "description": "JSON schema for scientific research papers",
  "type": "object",
  "required": ["metadata", "content", "references"],
  "additionalProperties": false,
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Paper metadata and bibliographic information",
      "required": ["title", "authors", "abstract", "tags"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "description": "Full title of the paper"
        },
        "authors": {
          "type": "array",
          "description": "List of paper authors",
          "items": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "description": "Author's full name"
              }
            }
          }
        },
        "abstract": {
          "type": "string",
          "description": "Paper abstract"
        },
        "tags": {
          "type": "array",
          "description": "Arbitrary tags for categorization and discovery (e.g., keywords, subject areas, methodologies)",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "content": {
      "type": "object",
      "description": "Main content of the paper",
      "required": ["sections", "figures", "tables", "equations", "experimental_setup", "experimental_results", "data_availability", "code_availability"],
      "additionalProperties": false,
      "properties": {
        "sections": {
          "type": "array",
          "description": "Main text sections of the paper",
          "items": {
            "type": "object",
            "required": ["title", "content"],
            "additionalProperties": false,
            "properties": {
              "title": {
                "type": "string",
                "description": "Section title"
              },
              "content": {
                "type": "string",
                "description": "Section text content"
              }
            }
          }
        },
        "figures": {
          "type": "array",
          "description": "Figures in the paper",
          "items": {
            "type": "object",
            "required": ["id", "caption"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "description": "Figure identifier (e.g., 'Figure 1')"
              },
              "caption": {
                "type": "string",
                "description": "Figure caption"
              }
            }
          }
        },
        "tables": {
          "type": "array",
          "description": "Tables in the paper",
          "items": {
            "type": "object",
            "required": ["id", "caption", "data"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "description": "Table identifier (e.g., 'Table 1')"
              },
              "caption": {
                "type": "string",
                "description": "Table caption"
              },
              "data": {
                "type": "object",
                "description": "Table structure and data",
                "required": ["headers", "rows"],
                "additionalProperties": false,
                "properties": {
                  "headers": {
                    "type": "array",
                    "items": {"type": "string"},
                    "description": "Column headers"
                  },
                  "rows": {
                    "type": "array",
                    "items": {
                      "type": "array",
                      "items": {"type": "string"},
                      "description": "Table row data"
                    }
                  }
                }
              }
            }
          }
        },
        "equations": {
          "type": "array",
          "description": "Mathematical equations",
          "items": {
            "type": "object",
            "required": ["id", "latex"],
            "additionalProperties": false,
            "properties": {
              "id": {
                "type": "string",
                "description": "Equation identifier"
              },
              "latex": {
                "type": "string",
                "description": "LaTeX representation of the equation"
              }
            }
          }
        },
        "experimental_setup": {
          "type": "object",
          "description": "Experimental methodology and setup",
          "required": ["description"],
          "additionalProperties": false,
          "properties": {
            "description": {
              "type": "string",
              "description": "Detailed description of experimental setup"
            }
          }
        },
        "experimental_results": {
          "type": "object",
          "description": "Experimental results and findings",
          "required": ["summary"],
          "additionalProperties": false,
          "properties": {
            "summary": {
              "type": "string",
              "description": "Summary of key experimental results"
            }
          }
        },
        "data_availability": {
          "type": "object",
          "description": "Information about data availability",
          "required": ["statement"],
          "additionalProperties": false,
          "properties": {
            "statement": {
              "type": "string",
              "description": "Data availability statement"
            }
          }
        },
        "code_availability": {
          "type": "object",
          "description": "Information about code availability",
          "required": ["repository_url"],
          "additionalProperties": false,
          "properties": {
            "repository_url": {
              "type": "string",
              "description": "URL to code repository"
            }
          }
        }
      }
    },
    "references": {
      "type": "array",
      "description": "Bibliography and references",
      "items": {
        "type": "object",
        "required": ["id", "title", "authors"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "description": "Reference identifier"
          },
          "title": {
            "type": "string",
            "description": "Reference title"
          },
          "authors": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Reference authors"
          }
        }
      }
    }
  }
}
